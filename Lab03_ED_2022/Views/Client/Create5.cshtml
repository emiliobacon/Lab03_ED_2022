@model Lab03_ED_2022.Models.ClientModel

@{
    ViewData["Title"] = "Create5";
}

<h1>Búsqueda por Parámetros</h1>
<br></br>
<h4>Búsqueda por Email</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Buscar Email" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h4>Búsqueda por DPI</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Buscar DPI" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h4>Búsqueda por Número de Serie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create4">
            <div class="form-group">
                <label asp-for="SerialNo" class="control-label"></label>
                <input asp-for="SerialNo" class="form-control" />
                <span asp-validation-for="SerialNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar Serie" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
